{
    "manifest_version": 3,
    "name": "FocusBuddy",
    "version": "1.0",
    "description": "A gamified Pomodoro tool to boost productivity on specific websites.",
    "permissions": ["tabs", "storage", "alarms", "notifications", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon48.png"
      }
    },
    "icons": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  }